{% extends 'base.html.twig' %}

{% block title %}Inscrivez vous{% endblock %}

{% block body %}
    <main class="container d-flex flex-column align-items-center">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <h1 class="h3 mt-5">Inscrivez vous</h1>

        {{ form_start(registrationForm, {'attr': {'class': 'col-10 col-sm-9 col-md-6 col-lg-5 col-xl-4'}}) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: "J'accepte les conditions d'utilisation"
        }) }}
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-dark mt-3 col-6">Valider</button>
        </div>
        {{ form_end(registrationForm) }}
    </main>
{% endblock %}
