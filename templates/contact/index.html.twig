{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
{% for category, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ category }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
<div class="container d-flex justify-content-center pt-5">
    <main class="bg-dark d-flex flex-column col-10 col-md-8 col-lg-7 col-xl-6 px-5">
        <h1 class="py-4 text-center main-title">Contact</h1>
        <p class="text-muted">Les champs marqués d’un <span class="text-danger">*</span> sont obligatoires</p>
        {{ form_start(form) }}
        {{ form_errors(form.firstname) }}
        {{ form_label(
            form.firstname,
            'Prénom <span class="text-danger">*</span>',
            {
                'label_html': true,
            },
        ) }}
        {{ form_widget(form.firstname) }}
        {{ form_errors(form.lastname) }}
        {{ form_label(
            form.lastname,
            'Nom <span class="text-danger">*</span>',
            {
                'label_html': true,
            },
        ) }}
        {{ form_widget(form.lastname) }}
        {{ form_errors(form.phone) }}
        {{ form_label(
            form.phone,
            'Téléphone <span class="text-danger">*</span>',
            {
                'label_html': true,
            },
        ) }}
        {{ form_widget(form.phone) }}
        {{ form_errors(form.email) }}
        {{ form_label(
            form.email,
            'Email <span class="text-danger">*</span>',
            {
                'label_html': true,
            },
        ) }}
        {{ form_widget(form.email) }}
        {{ form_errors(form.message) }}
        {{ form_label(
            form.message,
            'Message <span class="text-danger">*</span>',
            {
                'label_html': true,
            },
        ) }}
        {{ form_widget(form.message) }}
        <button class="btn btn-primary my-3">{{ button_label|default('Envoyer') }}</button>
        {{ form_end(form) }}
    </main>
</div>
{% endblock %}
