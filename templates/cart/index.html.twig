{% extends 'base.html.twig' %}

{% block title %}Panier d'achat{% endblock %}

{% block body %}
    <main class="container d-flex flex-wrap justify-content-center mt-3">
        {% if data[0] is defined %}
            {% for element in data %}
                <div class="card bg-dark border-1 border-rounded my-3" style="width: 18rem;">
                    <h5 class="card-title text-center">{{ element.product.name }}</h5>
                    <img src="{{ element.product.picture }}" class="card-img-top" alt="coffee picture">
                    <div class="card-body">
                        <span>Quantit√© :</span>
                        <a href="{{ path('app_cart_remove', {id: element.product.id}) }}">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-dash-circle text-light" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z"/>
                            </svg>
                        </a>
                        {{ element.quantity }}
                        <a href="{{ path('app_cart_add', {id: element.product.id}) }}">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle text-light" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                            </svg>
                        </a>
                        <p class="mt-3">Sous total: {{ element.subtotal|format_currency('EUR') }}</p>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </main>
{% endblock %}
